{
  "expo": {
    "name": "CardHoldr",
    "slug": "cardholdr-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cardholdr",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.adrianpeslar.cardholdrapp",
      "infoPlist": {
        "NSCameraUsageDescription": "CardHoldr needs camera access to scan barcodes on your loyalty cards."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0D1117",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.adrianpeslar.cardholdrapp",
      "permissions": ["android.permission.CAMERA"]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0D1117"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CardHoldr to access your camera to scan barcodes."
        }
      ],
      [
        "expo-brightness",
        {
          "isIosSystemBrightnessSupported": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
